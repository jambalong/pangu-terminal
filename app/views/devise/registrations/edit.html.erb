<div class="auth-container" style="max-width: 500px;">
  <h2 class="auth-title">Account Settings</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-form-group">
      <%= f.label :email, class: "auth-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="status-msg">Currently waiting confirmation for: <b><%= resource.unconfirmed_email %></b></div>
    <% end %>

    <div class="auth-form-group secondary-border">
      <div class="label-with-hint">
        <%= f.label :current_password, class: "auth-label" %>
        <span class="hint-text">Required to save changes</span>
      </div>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "auth-input highlight-input" %>
    </div>

    <div class="auth-form-group">
      <div class="label-with-hint">
        <%= f.label :password, "New Password", class: "auth-label" %>
        <span class="hint-text">Leave blank to keep current</span>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div class="auth-form-group">
      <%= f.label :password_confirmation, "Confirm New Password", class: "auth-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div style="padding-top: 1rem;">
      <%= f.submit "Update Profile", class: "auth-submit" %>
    </div>
  <% end %>

  <div class="danger-zone">
    <h3 class="danger-title">Danger Zone</h3>
    <p>Once you delete your account, all your saved plans will be permanently removed.</p>
    <%= button_to "Delete Account", user_registration_path, 
    method: :delete,
    class: "btn-danger",
    data: { 
      turbo_confirm: "Are you sure? This cannot be undone.",
      turbo_method: :delete,
      turbo_frame: "_top"
    } %>
  </div>

  <div class="api-keys-section" id="api-keys">
    <h3>API Keys</h3>

    <% if flash[:api_token] %>
      <div class="api-token-reveal">
        <p>Copy this token now — it won't be shown again.</p>
        <code><%= flash[:api_token] %></code>
      </div>
    <% end %>

    <% current_user.api_keys.each do |key| %>
      <div class="api-key-row">
        <span class="api-key-name"><%= key.name %></span>
        <span class="api-key-meta">Created <%= time_ago_in_words(key.created_at) %> ago</span>
        <%= button_to "Revoke", api_key_path(key), method: :delete, data: { turbo: false }, class: "btn-revoke" %>
      </div>
    <% end %>

    <div class="api-key-form">
      <%= form_with url: api_keys_path, data: { turbo: false } do |f| %>
        <%= f.text_field :name, placeholder: "A unique name for this key" %>
        <%= f.submit "Generate Key" %>
      <% end %>
    </div>
  </div>

  <div class="auth-links">
    <%= link_to "← Back to Dashboard", authenticated_root_path, data: { turbo: false } %>
  </div>
</div>