<div class="inventory-card group" id="<%= dom_id(inventory_item) %>">
  <%# Status Indicator (Saved flash) %>
  <div id="<%= dom_id(inventory_item) %>_status" class="status-indicator">
    Saved
  </div>

  <%# Icon Placeholder with Rarity Border %>
  <div class="item-icon rarity-border-<%= inventory_item.rarity %>">
    <span class="icon-initials"><%= inventory_item.name[0..1].upcase %></span>
  </div>
  
  <h3 class="item-name"><%= inventory_item.name %></h3>

  <%# Synthesis Indicator %>
  <% reconciliation = @synthesis_result&.dig(inventory_item.material_id) %>
  <% if reconciliation&.dig(:synthesis_opportunity) %>
    <div class="synthesis-indicator">
      <%= image_tag("purification.webp", alt: "Can supplement", class: "synthesis-icon") %>
    </div>
  <% end %>

  <%# Progress Info %>
  <div class="progress-container">
    <% if reconciliation %>
      <% needed = reconciliation[:needed] %>
      <% owned = reconciliation[:owned] %>
      <% percent = needed > 0 ? ((owned / needed.to_f) * 100).round : 0 %>
      
      <div class="progress-bar">
        <div class="progress-fill" style="width: <%= percent %>%"></div>
      </div>
      <span class="qty-display"><%= format_quantity(owned) %> / <%= format_quantity(needed) %></span>
    <% else %>
      <div class="progress-bar">
        <div class="progress-fill" style="width: 0%"></div>
      </div>
      <span class="qty-display">No data</span>
    <% end %>
  </div>

  <%# Quantity Input Form %>
  <%= form_with model: inventory_item, class: "qty-form" do |f| %>
    <%= f.number_field :quantity, 
        class: "qty-input",
        onblur: "this.form.requestSubmit()" %>
  <% end %>
</div>