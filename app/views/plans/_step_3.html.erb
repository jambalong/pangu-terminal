<%# locals: (plan:, subject:, subject_type:, errors: nil) %>

<div class="config-container">
  <header class="modal-header">
    <div class="config-header">
      <div class="config-title">
        <div class="plan-card-portrait">
          <% if subject.image_url.present? %>
            <%= image_tag(subject.image_url, alt: subject.name) %>
          <% else %>
            <span class="portrait-initials"><%= subject.name[0..1].upcase %></span>
          <% end %>
        </div>
        <%= subject.name %>
      </div>
      <span class="rarity-5 text-2xl">
        <%= subject.rarity == 5 ? "★★★★★" : "★★★★" %>
      </span>
    </div>
    <p class="config-subtitle">
      CONFIGURE <%= subject_type.upcase %> PLAN
    </p>
  </header>

  <div id="plan-form-frame" class="custom-scrollbar">
    <%= render "form", plan: plan, subject: subject, subject_type: subject_type, errors: errors %>
  </div>
</div>
