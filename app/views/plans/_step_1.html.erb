<%# locals: (subject_type: nil, subject_list: nil, subject: nil, errors: nil) %>

<div class="selection-container">
  <header class="modal-header">
    <h2 class="modal-title">Select Plan Type</h2>
    <p class="selection-subtitle">What would you like to plan for today?</p>
  </header>

  <div class="selection-grid">
    <%# Resonator Selection %>
    <%= link_to new_plan_path(subject_type: "Resonator", step: 2), 
        data: { turbo_frame: "modal" },
        class: "selection-card theme-blue" do %>
      <div class="selection-icon">
        <%= image_tag("/images/textures/resonator.png", alt: "Resonator") %>
      </div>
      <span class="selection-label">Resonator</span>
    <% end %>

    <%# Weapon Selection %>
    <%= link_to new_plan_path(subject_type: "Weapon", step: 2), 
        data: { turbo_frame: "modal" },
        class: "selection-card theme-peach" do %>
      <div class="selection-icon ">
        <%= image_tag("/images/textures/weapon.png", alt: "Weapon") %>
      </div>
      <span class="selection-label">Weapon</span>
    <% end %>
  </div>
</div>
