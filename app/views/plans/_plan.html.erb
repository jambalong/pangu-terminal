<div
  id="<%= dom_id(plan) %>"
  class="plan-card border p-4 mb-4 rounded shadow-sm bg-white relative"
>
  <div class="flex justify-between items-start">
    <div>
      <h3 class="font-bold text-lg"><%= plan.plan_data.dig("input", "name") %></h3>
    </div>

    <%# Delete Button %>
    <%= button_to "Delete",
    plan_path(plan),
    method: :delete,
    form: {
      data: {
        turbo_confirm: "Are you sure you want to delete this plan?",
      },
    },
    class: "text-red-500 hover:text-red-700 text-xs font-semibold p-1" %>
  </div>

  <% plan.plan_data.dig("output").each do |material_name, quantity| %>
    <div class="flex justify-between">
      <span><%= material_name %></span>
      <span>x<%= quantity %></span>
    </div>
  <% end %>
</div>
